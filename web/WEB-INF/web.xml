<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <!-- START API SERVLET-->
    <servlet>
        <servlet-name>ArticleAPI</servlet-name>
        <servlet-class>com.quanganh9x.marquee.api.ArticleAPI</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArticleAPI</servlet-name>
        <url-pattern>/api/v1/article</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CheckDuplicateArticleAPI</servlet-name>
        <servlet-class>com.quanganh9x.marquee.api.CheckDuplicateArticleAPI</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CheckDuplicateArticleAPI</servlet-name>
        <url-pattern>/api/v1/article/check-duplicate</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CrawlerSourceAPI</servlet-name>
        <servlet-class>com.quanganh9x.marquee.api.SourceAPI</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CrawlerSourceAPI</servlet-name>
        <url-pattern>/api/v1/crawlersource</url-pattern>
    </servlet-mapping>
    <!-- END API SERVLET-->

    <!-- START ADMIN SERVLET-->
    <servlet>
        <servlet-name>AddCategoryServlet</servlet-name>
        <servlet-class>com.quanganh9x.marquee.servlet.admin.AddCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCategoryServlet</servlet-name>
        <url-pattern>/admin/category/add</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>AddCrawlerSourceServlet</servlet-name>
        <servlet-class>com.quanganh9x.marquee.servlet.admin.AddCrawlerSourceServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AddCrawlerSourceServlet</servlet-name>
        <url-pattern>/admin/crawler-source/add</url-pattern>
    </servlet-mapping>
    <!-- END ADMIN SERVLET-->

    <!-- START CLIENT SERVLET-->
    <servlet>
        <servlet-name>HomeServlet</servlet-name>
        <servlet-class>com.quanganh9x.marquee.servlet.client.HomeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomeServlet</servlet-name>
        <url-pattern>/</url-pattern>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>CategoryServlet</servlet-name>
        <servlet-class>com.quanganh9x.marquee.servlet.client.CategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CategoryServlet</servlet-name>
        <url-pattern>/category</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>BoxCategoryWidget</servlet-name>
        <servlet-class>com.quanganh9x.marquee.servlet.client.widget.BoxCategoryWidget</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BoxCategoryWidget</servlet-name>
        <url-pattern>/widget/boxCategory</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>ArticleServlet</servlet-name>
        <servlet-class>com.quanganh9x.marquee.servlet.client.ArticleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ArticleServlet</servlet-name>
        <url-pattern>/article</url-pattern>
    </servlet-mapping>
    <!-- END CLIENT SERVLET-->


    <!-- ASSETS -->
    <servlet-mapping>
        <servlet-name>default</servlet-name>
        <url-pattern>/assets/*</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>ObjectifyFilter</filter-name>
        <filter-class>com.googlecode.objectify.ObjectifyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>ObjectifyFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>MyObjectifyFilter</filter-name>
        <filter-class>com.quanganh9x.marquee.filter.ObjectifyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>MyObjectifyFilter</filter-name>
        <url-pattern>*</url-pattern>
    </filter-mapping>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/CabbageNews.json</param-value>
    </context-param>
    <listener>
        <listener-class>com.quanganh9x.marquee.listener.ObjectifyListener</listener-class>
    </listener>
</web-app>